<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:id="@+id/iv_prduct_image"
        android:src="@drawable/productimagetemp"
        android:layout_marginLeft="@dimen/text_margin_top"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:id="@+id/tv_product_name"
        android:textSize="@dimen/button_text_size"
        android:layout_gravity="center"
        android:text="@string/product_name"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/text_margin_right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:id="@+id/tv_product_price"
        android:textSize="@dimen/button_text_size"
        android:gravity="end"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/text_margin_top"
        android:text="@string/product_pride"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="@dimen/text_margin_right"
        />
</LinearLayout>